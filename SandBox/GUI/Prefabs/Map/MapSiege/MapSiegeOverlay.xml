              <ItemTemplate>
                <MapSiegeMachineButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="61" SuggestedHeight="61" MarginBottom="2" Brush="MapSiege.Construction.Button" Command.Click="OnSelection" Command.HoverBegin="ExecuteShowTooltip" Command.HoverEnd="ExecuteHideTooltip" MachineID="@MachineID">
