                        <BrushWidget Id="Handle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="1" SuggestedHeight="1" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="false" IsVisible="false" />
                      </Children>
