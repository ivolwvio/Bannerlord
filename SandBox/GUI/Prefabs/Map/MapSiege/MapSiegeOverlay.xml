        <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Bottom" MarginBottom="200" IsHidden="@IsPreparationsCompleted" StackLayout.LayoutMethod="VerticalBottomToTop">
          <Children>
            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" Text="@PreparationTitleText" MarginTop="10" ClipContents="false"/>

