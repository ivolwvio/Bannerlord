<Prefab>
  <Parameters>
    <Parameter Name="Title" DefaultValue="title" />
    <Parameter Name="ItemList" DefaultValue=".." />
  </Parameters>
  <Constants>
  </Constants>
  <Window>
    <!--Divider Widget-->
    <EncyclopediaDividerWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" CollapseIndicator="PlacementListPanel\CollapseIndicator" ItemListWidget="*ItemList" UpdateChildrenStates="true" DoNotPassEventsToChildren="true">
      <Children>

        <ListPanel Id="PlacementListPanel" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" UpdateChildrenStates="true">
          <Children>

            <!--Collapse Indicator Widget-->
            <BrushWidget Id="CollapseIndicator" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="19" SuggestedWidth="19" VerticalAlignment="Center" PositionYOffset="-3" Brush="SPOptions.GameKeysgroup.ExpandIndicator" OverrideDefaultStateSwitchingEnabled="true" />

            <!--Header Text-->
            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Brush="Encyclopedia.SubPage.Header.Text" Text="*Title" MarginLeft="10"/>

            <!--Divider-->
            <ImageWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="2" VerticalAlignment="Center" HorizontalAlignment="Left" MarginLeft="15" Brush="SPOptions.CollapserLine" />

          </Children>
        </ListPanel>

      </Children>
    </EncyclopediaDividerWidget>
  </Window>
</Prefab>
