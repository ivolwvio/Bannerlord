      <Style Name="Default" FontColor="#D1C2AFB3" TextGlowColor="#000000FF" TextOutlineColor="#000000FF" TextOutlineAmount="0.3" TextGlowRadius="0" TextBlur="0.1" FontSize="20" />
      <Style Name="Hovered" />
      <Style Name="Pressed" />
      <Style Name="Selected" FontColor="#D1C2AFFF" />
