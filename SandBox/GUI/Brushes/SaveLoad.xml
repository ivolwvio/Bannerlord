  </Brush>
  
  <Brush Name="SaveLoad.Tuple.GameTime.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Justify">
    <Styles>
      <Style Name="Default" FontColor="#F1B15FCC" TextGlowColor="#000000FF" TextOutlineColor="#000000FF" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="32" />
