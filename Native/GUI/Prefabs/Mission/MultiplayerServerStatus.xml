<Window>
  <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent">
    <Children>

      <ListPanel WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" MarginTop="300" MarginLeft="50" StackLayout.LayoutMethod="VerticalBottomToTop">
        <Children>

          <!--Server Status-->
          <ServerStatusItemWidget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="47" SuggestedHeight="48" HorizontalAlignment="Center" VerticalAlignment="Center" MarginBottom="10" Brush="MPHUD.ServerPerformance" Status="@ServerPerformanceState"/>

          <!--Latency Ping-->
          <ServerStatusItemWidget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="61" SuggestedHeight="48" HorizontalAlignment="Center" VerticalAlignment="Center" MarginBottom="10" Brush="MPHUD.PingStatus" Status="@PingState"/>

          <!--Packet Loss-->
          <ServerStatusItemWidget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="60" SuggestedHeight="48" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="MPHUD.PacketLoss" Status="@PacketLossState"/>

        </Children>
      </ListPanel>

    </Children>
  </Widget>
</Window>