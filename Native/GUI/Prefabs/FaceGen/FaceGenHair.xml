<Window>
  <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="VerticalBottomToTop">
    <Children>

      <FaceGenColorSelector DataSource="{HairColorSelector}" MarginTop="10" />

      <Widget WidthSizePolicy="Fixed" SuggestedWidth="581" HeightSizePolicy="Fixed" SuggestedHeight="14" HorizontalAlignment="Center" Sprite="CharacterCreation\stone_divider" />
      <FaceGenGrid WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginRight="3" Parameter.GridDataSource="{HairTypes}" />

      <Widget WidthSizePolicy="Fixed" SuggestedWidth="580" HeightSizePolicy="Fixed" SuggestedHeight="11" HorizontalAlignment="Center" Sprite="CharacterCreation\stone_divider_thin" ExtendTop="19" ExtendBottom="20" />
      <FaceGenGrid WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginRight="3" IsHidden="@IsFemale" Parameter.GridDataSource="{BeardTypes}" />

    </Children>
  </ListPanel>
</Window>