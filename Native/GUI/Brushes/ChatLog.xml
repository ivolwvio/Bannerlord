<Brushes>
  <Brush Name="ChatLog.Text" Font="Galahad" TextHorizontalAlignment="Center">
    <Layers>
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FAF4DEFF" TextGlowColor="#000000FF" TextOutlineColor="#000000CC" TextOutlineAmount="0.1" TextGlowRadius="0" TextBlur="1" FontSize="20" />
      <Style Name="HeadshotTitle.Text" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
      <Style Name="HeadshotTitle.Text.MouseOver" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
      <Style Name="HeadshotTitle.Text.MouseDown" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
    </Styles>
  </Brush>

  <Brush Name="SPChatlog.CombatLogButton">
    <Layers>
      <BrushLayer Name="Default" Sprite="RadialMenu\radial_menu_item_background" ExtendLeft="8" ExtendTop="8" ExtendBottom="8" ExtendRight="8"/>
      <BrushLayer Name="SwordUnSelected" Sprite="TroopTypeIcons\icon_troop_type_infantry"  SaturationFactor="-100" IsHidden="true"/>
      <BrushLayer Name="SwordSelected" Sprite="TroopTypeIcons\icon_troop_type_infantry" Color="#00FF00FF" IsHidden="true"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="0.8" />
        <BrushLayer Name="SwordUnSelected" IsHidden="false"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.1" />
        <BrushLayer Name="SwordUnSelected" ColorFactor="1.1" IsHidden="false"/>
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.6" />
        <BrushLayer Name="SwordUnSelected" ColorFactor="0.6" IsHidden="false"/>
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.3" Color="#00FF00FF" />
        <BrushLayer Name="SwordSelected" IsHidden="false"/>
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" AlphaFactor="0.5" />
        <BrushLayer Name="SwordUnSelected" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
    </Styles>
  </Brush>
</Brushes>